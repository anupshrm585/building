<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
 <managed-bean>
  <managed-bean-name>loginDTO</managed-bean-name>
  <managed-bean-class>com.build.pojo.DTO.LoginDTO</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
</managed-bean> 
<managed-bean>
  <managed-bean-name>loginService</managed-bean-name>
  <managed-bean-class>com.build.view.services.LoginService</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
  <managed-property>
      <property-name>loginDTO</property-name>
      <value>#{loginDTO}</value>
  </managed-property>  
</managed-bean>
 <managed-bean>
  <managed-bean-name>groupDTO</managed-bean-name>
  <managed-bean-class>com.build.pojo.DTO.GroupDTO</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
</managed-bean> 
<managed-bean>
  <managed-bean-name>groupService</managed-bean-name>
  <managed-bean-class>com.build.view.services.GroupService</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
  <managed-property>
      <property-name>groupDTO</property-name>
      <value>#{groupDTO}</value>
  </managed-property>  
</managed-bean>  
<managed-bean>
  <managed-bean-name>userDTO</managed-bean-name>
  <managed-bean-class>com.build.pojo.DTO.UserDTO</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
</managed-bean> 
<managed-bean>
  <managed-bean-name>userService</managed-bean-name>
  <managed-bean-class>com.build.view.services.UserService</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
  <managed-property>
      <property-name>userDTO</property-name>
      <value>#{userDTO}</value>
  </managed-property>  
</managed-bean>  
</faces-config>
